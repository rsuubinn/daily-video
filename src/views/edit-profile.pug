extends layouts

block content
  if errorMessage
    span=errorMessage
  form(method="POST")
    input(type="text", name="name", id="name", placeholder="이름", value=loggedInUser.name)
    input(type="text", name="email", id="email", placeholder="이메일", value=loggedInUser.email)
    input(type="submit", value="변경하기")

  a(href=`/users/change-password`) 비밀번호 변경하기
